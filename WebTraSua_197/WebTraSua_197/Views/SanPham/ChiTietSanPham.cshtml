                        </li>
                    </ul>
                    <br>
                    <ul>
                        <li>
                            Đường:
                            <select name="duong" id="duong">
                                @foreach (var it in duong)
                                {
                                    <option value="@it.Duong1">@it.Duong1%</option>
                                }

