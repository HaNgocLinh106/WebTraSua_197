@using WebTraSua_197.Models.EF

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var detail = (WebTraSua_197.Models.EF.SanPham)ViewBag.Detail;
    var listDetail = (List<WebTraSua_197.Models.EF.Size>)ViewBag.ListDetail;
    var topping = (List<WebTraSua_197.Models.EF.Topping>)ViewBag.Topping;
    var duong = (List<WebTraSua_197.Models.EF.Duong>)ViewBag.Duong;
    var da = (List<WebTraSua_197.Models.EF.Da>)ViewBag.da;
}

<link rel="stylesheet" href="/Content/css/etalage.css">
<script src="/Content/js/jquery.etalage.min.js"></script>
<script>
        jQuery(document).ready(function ($) {

            $('#etalage').etalage({
                thumb_image_width: 300,
                thumb_image_height: 400,
                source_image_width: 900,
                source_image_height: 1200,
                show_hint: true,
                click_callback: function (image_anchor, instance_id) {
                    alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
                }
            });

        });
</script>
